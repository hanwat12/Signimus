package Task16;

public class FibonacciSeries {

    public static void Fibonacci(int N){
        int n1 = 0 , n2 =1;
        for(int i=0; i<N; i++){
            System.out.println(n1 +" ");

            int sum = n1 + n2;
            n1 = n2 ;
            n2 = sum ;

        }
    }

    public static void main(String[] args) {
       
        int   N =10;
        Fibonacci(N);
    }
}

